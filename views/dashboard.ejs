<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
</head>
<body>
  <h1>Dashboard</h1>
  <p>Welcome, <%= user.username %>!</p>
  <p><a href="/courses/new">Add New Course</a></p>
  <h2>Your Courses</h2>
  <% if(user.courses.length === 0) { %>
    <p>You have no courses added.</p>
  <% } else { %>
    <ul>
      <% user.courses.forEach(function(course) { %>
        <li>
          <a href="/courses/<%= course._id %>">
            <strong><%= course.courseName %></strong>
          </a> - Attended: <%= course.attendedClasses %>/<%= course.totalClasses %>
          <!-- Form to calculate threshold -->
          <form action="/courses/<%= course._id %>/threshold" method="POST" style="display:inline;">
            <input type="number" step="0.1" name="threshold" placeholder="Attendance % threshold" required>
            <button type="submit">Calculate</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } %>
  <p><a href="/logout">Logout</a></p>
</body>
</html>